<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:background="#DF83F0"
android:orientation="vertical">



    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:background="#FFEB3B"
        android:text="KOMPONEN ANDROID"
        android:textAlignment="center"
        android:textColor="#FFD40020"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:layout_marginHorizontal="20dp"
    android:layout_gravity="center"
    android:text="ACTIVITY"
    android:textColor="#FF9C27B0"
    android:textStyle="bold"
    android:textSize="27dp"
    android:background="#FFEB3B"
    android:layout_marginTop="25dp"
    android:onClick="btn_1"/>

<Button
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:layout_marginHorizontal="20dp"
    android:text="INTENT"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:textSize="27dp"
    android:textColor="#FF9C27B0"
    android:background="#FFEB3B"
    android:layout_marginTop="25dp"
    android:onClick="btn_2"/>

<Button
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:layout_marginHorizontal="20dp"
    android:text="SERVICE"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:textSize="27dp"
    android:background="#FFEB3B"
    android:textColor="#FF9C27B0"
    android:layout_marginTop="25dp"
    android:onClick="btn_3"/>

<Button
    android:layout_width="250dp"
    android:layout_height="60dp"
    android:layout_marginHorizontal="20dp"
    android:text="CONTENT PROVIDER"
    android:textStyle="bold"
    android:textSize="22dp"
    android:textColor="#FF9C27B0"
    android:layout_gravity="center"
    android:background="#FFEB3B"
    android:layout_marginTop="25dp"
    android:onClick="btn_4"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="#FFEB3B"
        android:onClick="btn_5"
        android:text="BROADCAST RECEIVER"
        android:textColor="#FF9C27B0"
        android:textSize="22dp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#FFEB3B"
      />

</LinearLayout>

